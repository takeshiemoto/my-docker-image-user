{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^\\.github\\/workflows\\/[^/]+\\.ya?ml$"],
      "matchStrings": [
        "image: (?<depName>ghcr\\.io\\/takeshiemoto\\/my-docker-image)@sha256:(?<currentValue>[a-f0-9]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
